<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_solution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_result"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnsLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="60dp" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:background="#EAEBED"
       android:paddingVertical="16dp"
       android:id="@+id/btnsLayout"
       >
       
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           >

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="C"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_c"
               android:backgroundTint="#F43636"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="("
               android:textSize="32sp"
               android:backgroundTint="@color/purple_500"
               android:layout_margin="12dp"
               android:id="@+id/btn_open_bracate"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text=")"
               android:backgroundTint="@color/purple_500"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_close_bracate"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="/"
               android:backgroundTint="#F68F0B"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_division"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           >

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="7"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_7"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="8"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_8"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="9"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_9"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="*"
               android:backgroundTint="#F68F0B"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_multiply"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"

           android:gravity="center"
           >

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="4"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_4"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="5"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_5"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="6"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_6"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="+"
               android:backgroundTint="#F68F0B"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_addition"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"

           android:gravity="center"
           >

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="1"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_1"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="2"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_2"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="3"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_3"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="-"
               android:backgroundTint="#F68F0B"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_substrac"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           >

           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="AC"
               android:textSize="19sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_ac"
               android:backgroundTint="#F43636"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="0"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_0"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="."
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_point"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textColor="@color/white"
               android:text="="
               android:backgroundTint="#F68F0B"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/btn_equal"
               />

       </LinearLayout>
       
   </LinearLayout>

</RelativeLayout>